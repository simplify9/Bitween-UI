{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "module": "ESNext",
    "target": "ES6",
    "baseUrl": "./",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  
  "include": [
    "src"
  ]
}
